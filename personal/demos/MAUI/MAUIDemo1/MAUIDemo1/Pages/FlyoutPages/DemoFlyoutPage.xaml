<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIDemo1.Pages.FlyoutPages.DemoFlyoutPage"
             Title="DemoFlyoutPage">
    <FlyoutPage.Flyout>
        <ContentPage Title="My App" BackgroundColor="DarkBlue">
            <VerticalStackLayout>
                <Label 
                    Text="This is a Flyout Page"
                    HorizontalTextAlignment="Center"
                    Margin="20"
                />
            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage BackgroundColor="DarkRed">
                    <VerticalStackLayout>
                        <Label 
                            Text="This is a FlyoutPage.Detail"
                            FontAttributes="Bold"
                            FontSize="20"
                            TextColor="White"
                            HorizontalTextAlignment="Center"
                            Margin="20"
                        />
                    </VerticalStackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>