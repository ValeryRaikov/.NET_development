<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIControls.Pages.MainPage"
             Title=".NET MAUI Controls"
             BackgroundColor="White">
    <FlexLayout Direction="Column">
        <VerticalStackLayout FlexLayout.Grow="1" Padding="20" Spacing="10" VerticalOptions="End">
            <Button x:Name="commonControlsBtn" BackgroundColor="#f25365" Text="Common Controls" TextColor="White" Clicked="commonControlsBtn_Clicked" />
            <Button x:Name="actionControlsBtn" BackgroundColor="#f25365" Text="Action Controls" TextColor="White" Clicked="actionControlsBtn_Clicked" />
            <Button x:Name="inputControlsBtn" BackgroundColor="#f25365" Text="Input Controls" TextColor="White" Clicked="inputControlsBtn_Clicked" />
            <Button x:Name="indicatorControlsBtn" BackgroundColor="#f25365" Text="Indicator Controls" TextColor="White" Clicked="indicatorControlsBtn_Clicked" />
            <Button x:Name="drawingControlsBtn" BackgroundColor="#f25365" Text="Drawing Controls" TextColor="White" Clicked="drawingControlsBtn_Clicked" />
        </VerticalStackLayout>
    </FlexLayout>
</ContentPage>