<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiMVVM2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiMVVM2.Views"
    Title="MauiMVVM2">

    <TabBar>
        <Tab Title="Users">
            <ShellContent Title="Users" Route="UserPage" ContentTemplate="{DataTemplate views:UserPage}" />
        </Tab>
        <Tab Title="Products">
            <ShellContent Title="Products" Route="ProductPage" ContentTemplate="{DataTemplate views:ProductsPage}" />
        </Tab>
    </TabBar>

</Shell>
