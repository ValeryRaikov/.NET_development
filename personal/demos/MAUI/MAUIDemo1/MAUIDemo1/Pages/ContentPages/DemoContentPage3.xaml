             x:Class="MAUIDemo1.Pages.DemoContentPage3"
             Title="DemoContentPage3"
             BackgroundColor="#180a52">
    <VerticalStackLayout>
        <Label 
            Text="This is content page 3"
            FontSize="20"
            FontAttributes="Bold"
            Margin="20"
