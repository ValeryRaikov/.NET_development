<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIDemo1.Pages.DemoContentPage2"
             Title="DemoContentPage2"
             BackgroundColor="#0a5230">
    <VerticalStackLayout>
        <Label 
            Text="This is content page 2"
            FontSize="20"
            FontAttributes="Bold"
            Margin="20"
            TextColor="White"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button 
            x:Name="contentPage3Btn"
            Text="To content 3" 
            Margin="20"
            Clicked="contentPage3Btn_Clicked"/>
        <Button 
            x:Name="closeBtn"
            Text="Click Me" 
            Margin="20"
            Clicked="closeBtn_Clicked"/>
    </VerticalStackLayout>
</ContentPage>